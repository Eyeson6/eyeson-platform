<template menuId="2412" version="2"><!--模板跟节点  -->

    <!-- 在页面上显示页面的所在位置 -->
    <directions>
        <direct name="入库审核"/>
        <direct name="添加供应商"/>
    </directions>

    <!-- 将模块所有sql语句统一配置，供各个操作使用，其中包含多个sql配置-->
    <sqls sql="true">
        <sql id="listsql" method="select">
            SELECT
            su_id,
            su_name as out_name
            FROM
            sys_user
            where 1=1
            <if method="isNoEmpty" args="${su_id}">
                <![CDATA[ and su_id = ${su_id}]]>
            </if>
            <if method="isNoEmpty" args="${user_name}">
                <![CDATA[ and su_name like %${user_name}%]]>
            </if>
        </sql>
    </sqls>

    <!-- 查询节点，配包括查询请求的执行流程、页面渲染方式、查询条件配置等几个部分 -->
    <query pagesize="50" singleSelect="true" key="id">
        <!-- 执行流程，包含多个步骤，每个步骤可以选择调用service、执行sql，调用http等不同类型的操作 -->
        <process>
            <step channel="service" ref="commonSearchService2" method="test"/>
            <step channel="sql" ref="listsql"/>
            <step channel="service" ref="commonSearchService2" method="test"/>
        </process>
        <model>
            <clumn name="su_id" sortable="false" title="用户ID"/>
            <clumn name="out_name" sortable="false" title="用户名称"/>
        </model>
        <conditions>
            <condition input="text" title="ID" name="su_id"/>
            <condition input="text" title="名称" name="user_name"/>
        </conditions>
    </query>
</template>